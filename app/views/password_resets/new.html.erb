<h1>Forgot password</h1>

<div class="col-md-offset-3">
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control long-field' %>
  </p>

  <%= f.submit "Submit", class: "btn btn-primary long-field" %>
  <% end %>
</div>
