%h1{style: "text-align:center"} Log in
.col-md-offset-4
  = form_for(:session, url: login_path) do |f|
    %p
      = f.label :email
      = f.email_field :email, class: 'form-control long-field'
    %p
      = f.label :password
      = link_to "(forgot password)", new_password_reset_path
      = f.password_field :password, class: 'form-control long-field'
    %p
      = f.label :remember_me, class: "inline" do
        = f.check_box :remember_me
        %span Â  Remember me on this computer
    = f.submit "Log in", class: "btn btn-primary long-field"
