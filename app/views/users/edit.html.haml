%h1{:style => "text-align:center"} Update your profile
.col-md-offset-3
  = form_for(@user) do |f|
    = render 'shared/error_messages'
    %p
      = f.label :name
      %br/
      = f.text_field :name, class: "long-field form-control"
    %p
      = f.label :phone, "Phone number"
      %br/
      = f.text_field :phone, class: "long-field form-control"
    %p
      = f.label :email
      %br/
      = f.email_field :email, class: "long-field form-control"
    %p
    %p
      = f.label :password
      %br/
      %small
        %em Leave blank if you don't want to change your password
      %br/
      = f.password_field :password, class: "long-field form-control"
    %p
      = f.label :password_confirmation, "Confirmation"
      %br/
      %small
        %em Leave blank if you don't want to change your password
      %br/
      = f.password_field :password_confirmation, class: "long-field form-control"
    %br/
    %p
      = f.submit "Save changes", class: "btn btn-success"
      \ 
      \#{link_to "Back", user_path, class: "btn btn-primary"}  
      \#{link_to "Delete", @user, class: 'btn btn-danger', method: :delete, data: { confirm: "This will permanently remove your profile. Are you sure?" }}
